/*para colocar los divs en los productos de cada uno*/
.caja{
height: 300px;
width: 250px;
background: white;
margin: 5px;
color: black;
text-align: center;
font-family: arial;
display: inline-block;
transition: all 1s;
transition-timing-function: ease;
}
.caja:hover{
	/*agregar sombra*/
	/*        * y radio color*/
	box-shadow: 0 0 10px orange;
	transform: scale(1.4);
}
